meta {
  name: get_updated_card
  type: http
  seq: 2
}

get {
  url: {{cards_url}}{{created_card}}
  body: none
  auth: inherit
}

assert {
  res.status: eq 200
  res.body: isJson
  res.body.front: neq {{posted_front}}
  res.body.back: neq {{posted_back}}
  res.body.front: eq {{updated_front}}
  res.body.back: eq {{updated_back}}
}

settings {
  encodeUrl: true
  timeout: 0
}
