meta {
  name: get_question_by_id
  type: http
  seq: 2
}

get {
  url: {{questions_url}}{{created_question}}
  body: none
  auth: inherit
}

assert {
  res.status: eq 200
  res.body: isJson
  res.body.question: eq {{posted_question}}
  res.body.id: isNumber
  res.body.id: eq {{created_question}}
  res.body.answers: isArray
}

settings {
  encodeUrl: true
  timeout: 0
}
