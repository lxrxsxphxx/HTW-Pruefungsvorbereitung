meta {
  name: update_question
  type: http
  seq: 1
}

put {
  url: {{questions_url}}{{created_question}}
  body: json
  auth: inherit
}

body:json {
  {
      "question": "updated_question"
  }
}

assert {
  res.status: eq 200
  res.body: isDefined
  res.body: isJson
  res.body.question: eq {{updated_question}}
  res.body.id: eq {{created_question}}
}

script:post-response {
  bru.setVar("updated_question",res.body.question)
}

settings {
  encodeUrl: true
  timeout: 0
}
